<section class="header">
	{{#link-to 'landing'}}
		<img class="gegatronHeader" src='../images/Gegatron Logo and Fon 2t.jpg'>
		<h4 class="missionStatementHeader"> - Stories in Community - </h4>
	{{/link-to}}
	<nav id="navigation" class="site-navigation" role="navigation">
	  <ul class="menu">
		 <li class="menu-item">
			{{#link-to 'blog.about' classNames='aboutHeader'}}
				<h4 class="aboutHeader">About</h4>
			{{/link-to}}
		</li>
		<li class="menu-item">
			{{#link-to 'blog.home' classNames='aboutHeader'}}
				<h4 class="aboutHeader">blog</h4>
			{{/link-to}}
		</li>
		<li class='menu-item'>
			<h4 class="storiesHeader">Stories</h4>
			<ul class="dropDownList hidden">
